void setAll(unsigned long colour) {
  int red = (colour & 0xff0000) >> 16;
  int green = (colour & 0x00ff00) >> 8;
  int blue = (colour & 0x0000ff);

  analogWrite(redPin, red);
  analogWrite(greenPin, green);
  analogWrite(bluePin, blue);
}